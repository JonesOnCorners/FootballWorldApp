CREATE TABLE `players` (
   `PLAYER_ID` int(11) NOT NULL AUTO_INCREMENT,
   `PLAYER_NAME` varchar(100) DEFAULT NULL,
   `PLAYER_NATIONALITY` varchar(100) DEFAULT NULL,
   `PLAYER_PLACE_OF_BIRTH` varchar(100) DEFAULT NULL,
   `PLAYER_HEIGHT` varchar(20) DEFAULT NULL,
   `PLAYER_PLAYING_POSITION` int(11) DEFAULT NULL,
   `COUNTRY_PLAYING_FOR` int(11) DEFAULT NULL,
   `CLUB_PLAYING_FOR` int(11) DEFAULT NULL,
   `TRANSFER_VALUE` varchar(20) DEFAULT NULL,
   `PLAYER_AGE` int(11) DEFAULT NULL,
   PRIMARY KEY (`PLAYER_ID`),
   KEY `PLAYERS_FK_PPP` (`PLAYER_PLAYING_POSITION`),
   KEY `PLAYERS_FK_CLUB` (`CLUB_PLAYING_FOR`),
   KEY `PLAYERS_FK_COUNTRY` (`COUNTRY_PLAYING_FOR`),
   CONSTRAINT `PLAYERS_FK_CLUB` FOREIGN KEY (`CLUB_PLAYING_FOR`) REFERENCES `clubs` (`club_id`),
   CONSTRAINT `PLAYERS_FK_COUNTRY` FOREIGN KEY (`COUNTRY_PLAYING_FOR`) REFERENCES `country` (`country_id`),
   CONSTRAINT `PLAYERS_FK_PPP` FOREIGN KEY (`PLAYER_PLAYING_POSITION`) REFERENCES `playing_positions` (`position_id`)
 ) ENGINE=InnoDB AUTO_INCREMENT=32768 DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_0900_ai_ci

CREATE TABLE MANAGERS(
MANAGERS_ID INTEGER,
MANAGERS_NAME VARCHAR(100),
MANAGERS_DOB DATE,
MANAGERS_NATIONALITY VARCHAR(100),
MANAGERS_PLACE_OF_BIRTH VARCHAR(100),
MANAGERS_HEIGHT INTEGER,
COUNTRY_MANAGING INTEGER,
CLUB_MANGING INTEGER,
TRANSFER_VALUE DECIMAL(40,2),
CONSTRAINT MANAGERS_PK PRIMARY KEY(MANAGERS_ID),
CONSTRAINT MANAGERS_FK_CLUB FOREIGN KEY(CLUB_MANGING) REFERENCES CLUBS(CLUB_ID),
CONSTRAINT MANAGERS_FK_COUNTRY FOREIGN KEY(COUNTRY_MANAGING) REFERENCES COUNTRY(COUNTRY_ID)
);


CREATE TABLE CLUBS(
CLUB_ID INTEGER,
CLUB_NAME VARCHAR(100),
CLUB_FORMATION_DATE DATE,
CLUB_HOME_GROUND VARCHAR(100),
HOME_GROUND_CAPACITY INTEGER,
CLUB_COUNTRY_ID INTEGER,
CONSTRAINT CLUBS_PK PRIMARY KEY(CLUB_ID),
CONSTRAINT CLUBS_FK_COUNTRY FOREIGN KEY(CLUB_COUNTRY_ID) REFERENCES COUNTRY(COUNTRY_ID)
);


CREATE TABLE COUNTRY(
COUNTRY_ID INTEGER,
COUNTRY_NAME VARCHAR(100),
COUNTRY_FEDERATION VARCHAR(100),
CONSTRAINT COUNTRY_PK PRIMARY KEY(COUNTRY_ID)
);


CREATE TABLE COMPETITION_TYPE(
COMPETITION_TYPE_ID INTEGER,
COMPETITION_NAME VARCHAR(100),
CONSTRAINT COMPETITION_TYPE_PK PRIMARY KEY(COMPETITION_TYPE_ID)
);


CREATE TABLE PLAYING_POSITIONS(
POSITION_ID INTEGER,
POSITION_ABBR VARCHAR(3),
POSITION_FULLNAME VARCHAR(50),
CONSTRAINT POSITIONS_PK PRIMARY KEY(POSITION_ID)
);
